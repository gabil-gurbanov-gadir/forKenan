@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Create new Slider</h1>
    </div>
    <form class="user" method="post">
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.Title" class="form-control form-control-user text-center" id="title" placeholder="Title">
                <span class="danger-color" asp-validation-for="@Model.Title"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.Subtitle" class="form-control form-control-user text-center" id="subtitle" placeholder="Subtitle">
                <span class="danger-color" asp-validation-for="@Model.Subtitle"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.Image" class="form-control form-control-user text-center" id="imaage" placeholder="Image">
                <span class="danger-color" asp-validation-for="@Model.Image"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.RedirectUrl" class="form-control form-control-user text-center" id="redirectUrl" placeholder="Redirect Url">
                <span class="danger-color" asp-validation-for="@Model.RedirectUrl"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.Order" class="form-control form-control-user text-center" id="order" placeholder="Order">
                <span class="danger-color" asp-validation-for="@Model.Order"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.BtnText" class="form-control form-control-user text-center" id="btnText" placeholder="Button Text">
                <span class="danger-color" asp-validation-for="@Model.BtnText"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" class="btn btn-primary btn-user w-50">
                Create
            </button>
        </div>

    </form>
</div>

