@model Author
@{
    ViewData["Title"] = "Create";
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Create new Author</h1>
    </div>
    <form class="user" method="post">
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.FullName" class="form-control form-control-user text-center" id="name" placeholder="Author Full Name">
                <span class="danger-color" asp-validation-for="@Model.FullName"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <textarea asp-for="@Model.BioDesc" class="form-control form-control-user text-center" id="bio" placeholder="Author Biography" rows="5"></textarea>
                <span class="danger-color" asp-validation-for="@Model.BioDesc"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" class="btn btn-primary btn-user w-50">
                Create
            </button>
        </div>

    </form>
</div>

