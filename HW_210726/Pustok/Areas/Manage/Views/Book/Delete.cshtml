@model Book
@{
    ViewData["Title"] = "Delete";
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Delete Book</h1>
    </div>
    <form class="user" method="post">
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.Name" class="form-control form-control-user text-center" id="name" placeholder="Name">
                <span class="danger-color" asp-validation-for="@Model.Name"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.ProducingPrice" class="form-control form-control-user text-center" id="producingPrice" placeholder="Custom Price">
                <span class="danger-color" asp-validation-for="@Model.ProducingPrice"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.Price" class="form-control form-control-user text-center" id="price" placeholder="Price">
                <span class="danger-color" asp-validation-for="@Model.Price"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.Code" class="form-control form-control-user text-center" id="code" placeholder="Product Code">
                <span class="danger-color" asp-validation-for="@Model.Code"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <input type="text" asp-for="@Model.PublicationDate" class="form-control form-control-user text-center" id="date" placeholder="Publication Date (yyyy-MM-dd)" value="@Model.PublicationDate?.ToString("yyyy-MM-dd")">
                <span class="danger-color" asp-validation-for="@Model.PublicationDate"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center d-flex justify-content-start align-items-center">
                <input style="width:5%" type="checkbox" asp-for="@Model.IsAvailable" class="form-control form-control-user text-center mr-3" id="isAvailable">
                <label class="form-check-label" asp-for="@Model.IsAvailable">Availability</label>
                <span class="danger-color" asp-validation-for="@Model.IsAvailable"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-sm-6 mb-3 mb-sm-0 text-center">
                <textarea asp-for="@Model.Desc" class="form-control form-control-user text-center" id="description" placeholder="Description" rows="5"></textarea>
                <span class="danger-color" asp-validation-for="@Model.Desc"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center mt-5">
            <h2 class="h4 danger-color">Are you sure?</h2>
        </div>
        <div class="form-group row justify-content-center">
            <button type="submit" class="btn btn-primary btn-user w-25">
                Yes, delete it!
            </button>
        </div>
        <div class="form-group row justify-content-center mt-2">
            <a asp-action="index" class="btn btn-danger btn-user w-25 d-flex justify-content-around">
                <span class="text">Cancel</span>
            </a>
        </div>

    </form>
</div>



